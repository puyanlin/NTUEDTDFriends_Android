<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tw.edu.ntue.dtd.friends.MainActivity" >

    <ScrollView
        android:id="@+id/scrlv_subjects"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/ll_SubjectContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMaintainInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrlv_subjects"
        android:text="@string/maintain_info"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Gray" />

    <LinearLayout
        android:id="@+id/ll_fbbtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@color/fbblue"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imgview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/fblogo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_getCreditCardDonateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finduson"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fbclub"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
